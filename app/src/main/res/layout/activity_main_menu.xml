<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/backgroundrock1"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/menu_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:textColor="@color/colorText"
        android:layout_marginTop="15dp"
        android:background="@color/colorWhite"
        android:text="There is name of trip"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorWhite"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textSize="18sp"
            android:textColor="@color/colorText"
            android:text="Start:" />

        <TextView
            android:id="@+id/menu_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:textSize="18sp"
            android:textColor="@color/colorText"
            android:text="Unknown" />

        <TextView
            android:id="@+id/text_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:textColor="@color/colorText"
            android:text="End:" />

        <TextView
            android:id="@+id/menu_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:textColor="@color/colorText"
            android:text="Unknown" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_route"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:textColor="@color/colorText"
        android:background="@color/colorWhite"
        android:text="@string/btn_route" />

    <Button
        android:id="@+id/btn_cities"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:background="@color/colorWhite"
        android:textColor="@color/colorText"
        android:text="Cities" />

    <Button
        android:id="@+id/btn_find_tickets"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorWhite"
        android:text="@string/btn_find_tickets"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        tools:text="Find tickets" />

    <Button
        android:id="@+id/remove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:background="@color/colorWhite"
        android:textColor="@color/colorText"
        android:text="@string/delete" />



</LinearLayout>