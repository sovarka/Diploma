    <application
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
        <activity
            android:name=".RouteActivity"
            android:label="@string/title_activity_route"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="Menu" />
        <activity
            android:name=".NewTripActivity"
            android:label="New Trip" />
        <activity
            android:name=".NewRouteActivity"
            android:label="Menu" />
        <activity
            android:name=".OneItemRoute"
            android:label="" />
        <activity
            android:name=".CitiesActivity"
            android:label="Cities" />
        <activity
            android:name=".FindTicketsActivity"
            android:label="" />
        <activity
            android:name=".CityDetails"
            android:label="Details" />
        <activity
            android:name=".NotesDay"
            android:label="Details" />

    </application>

</manifest>